<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingEnd="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingStart="15dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="left"
        android:text="behind the back barbell wrist curls"
        android:textColor="@color/circular_progress_default_title"
        android:textSize="13sp" />


    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:progress_reached_bar_height="3dp"
        app:progress_reached_color="@color/circular_progress_default_title"
        app:progress_text_color="@color/circular_progress_default_title"
        app:progress_text_size="7sp"
        app:progress_text_visibility="visible"
        app:progress_unreached_bar_height="2.25dp"
        app:progress_unreached_color="@color/circular_progress_default_background" />
</LinearLayout>

