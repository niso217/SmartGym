<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_dark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left"
            android:paddingStart="0dp"
            android:text="behind the back barbell wrist curls"
            android:textColor="@color/circular_progress_default_title"
            android:textSize="13sp" />


        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/number_progress_bar"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            app:progress_reached_bar_height="3dp"
            app:progress_reached_color="@color/circular_progress_default_title"
            app:progress_text_color="@color/circular_progress_default_title"
            app:progress_text_size="7sp"
            app:progress_text_visibility="visible"
            app:progress_unreached_bar_height="2.25dp"
            app:progress_unreached_color="@color/circular_progress_default_background" />
    </LinearLayout>



</LinearLayout>