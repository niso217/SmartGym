<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d3d3d"
    android:gravity="center_vertical"
    android:orientation="vertical"

    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">



        <TabHost
            android:id="@+id/tab_host"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll"
                android:orientation="vertical">



                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />


                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.a.n.smartgym.Helpers.CircularProgressBar
                            android:id="@+id/pb_sets"
                            style="@style/Widget.ProgressBar.CircularProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="0.4"
                            circular:cpb_strokeWidth="10"
                            circular:cpb_subtitle="sets"
                            circular:cpb_title="1" />

                        <Space
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2" />

                        <com.a.n.smartgym.Helpers.CircularProgressBar
                            android:id="@+id/pb_bodyweight"
                            style="@style/Widget.ProgressBar.CircularProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_weight="0.4"
                            circular:cpb_strokeWidth="10"
                            circular:cpb_subtitle="Seconds"
                            circular:cpb_title="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.a.n.smartgym.Helpers.CircularProgressBar
                            android:id="@+id/set_weight2"
                            style="@style/Widget.ProgressBar.CircularProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="0.4"
                            circular:cpb_strokeWidth="10"
                            circular:cpb_subtitle="hjgjh"
                            circular:cpb_title="2" />

                        <Space
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2" />

                        <com.a.n.smartgym.Helpers.CircularProgressBar
                            android:id="@+id/set_progress2"
                            style="@style/Widget.ProgressBar.CircularProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_weight="0.4"
                            circular:cpb_strokeWidth="10"
                            circular:cpb_subtitle="Sets"
                            circular:cpb_title="2" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.a.n.smartgym.Helpers.CircularProgressBar
                            android:id="@+id/set_weight3"
                            style="@style/Widget.ProgressBar.CircularProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="0.4"
                            circular:cpb_strokeWidth="10"
                            circular:cpb_subtitle="sets"
                            circular:cpb_title="3" />

                        <Space
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2" />

                        <com.a.n.smartgym.Helpers.CircularProgressBar
                            android:id="@+id/set_progress3"
                            style="@style/Widget.ProgressBar.CircularProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_weight="0.4"
                            circular:cpb_strokeWidth="10"
                            circular:cpb_subtitle="Sets"
                            circular:cpb_title="3" />
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.a.n.smartgym.Helpers.CircularProgressBar
        android:id="@+id/pb_repetition"
        style="@style/Widget.ProgressBar.CircularProgressBar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="0dp"
        circular:cpb_strokeWidth="15"
        circular:cpb_subtitle="Repeats"
        circular:cpb_title="0/10" />

</LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_ex_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="Finish" />


</LinearLayout>