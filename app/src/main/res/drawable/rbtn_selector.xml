<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape  android:shape="rectangle" >
            <corners
                android:radius="30dp"
                />
            <solid
                android:color="#3d3d3d"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="100dp"
                android:height="20dp"
                />
            <stroke
                android:width="2dp"
                android:color="#BADA55"
                />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape  android:shape="rectangle" >
            <corners
                android:radius="30dp"
                />
            <solid
                android:color="#3d3d3d"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="100dp"
                android:height="20dp"
                />
            <stroke
                android:width="2dp"
                android:color="@android:color/transparent"
                />
        </shape>
    </item>

</selector>